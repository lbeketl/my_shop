<%= form_with(model: product, class: "w-[500px] mx-auto rounded-lg bg-gray-900 p-6 drop-shadow-lg") do |f| %>
  <%= render "shared/error_messages", object: product %>
  <div class="mb-6">
    <%= f.label :name, "Product name", class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.text_field :name, class: "text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-white focus:border-white" %>
  </div>

  <div class="mb-6">
    <%= f.label :description, "Product description", class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.text_area :description, class: "block p-2.5 w-full text-sm rounded-lg border border-gray-300 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-white focus:border-white" %>
  </div>

  <div class="mb-6">
    <%= f.label :price, "Product price",class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.text_field :price, class: "w-[100px] text-sm rounded-lg block p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-white focus:border-white" %>
  </div>

  <div class="mb-6">
    <%= f.label :balance, "Product balance",class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.text_field :balance, class: "w-[100px] text-sm rounded-lg block p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-white focus:border-white" %>
  </div>

  <%= f.submit "Create", class: "text-white focus:ring-4 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center bg-main-green hover:bg-green-700 dark:focus:ring-blue-800" %>
<% end %>
